@{
    Layout = "~/Views/Shared/_LayoutPrincipal.cshtml";
    ViewData["Title"] = "Gestión de Empleados";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gestión de Empleados</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">
</head>
<body>

    <div class="container mt-4">
      

        <!-- Tabla de empleados -->
        <div class="table-responsive">
            <table id="tablaEmpleados" class="table table-striped table-hover table-bordered align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Identificación</th>
                        <th>Nombre</th>
                        <th>Fecha de Ingreso</th>
                        <th>Departamento</th>
                        <th>Posición</th>
                        <th>Salario Mensual</th>
                        <th>Status</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Se llenará dinámicamente con JavaScript -->
                </tbody>
            </table>
        </div>

        <!-- Modal de empleado -->
        <div class="modal fade" id="modalEmpleado" tabindex="-1" aria-labelledby="modalEmpleadoLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header bg-primary text-white">
                        <h5 class="modal-title" id="modalEmpleadoLabel">Agregar/Editar Empleado</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form id="formEmpleado">
                            <input type="hidden" id="employeeID" name="employeeID">

                            <div class="mb-3">
                                <label for="identification" class="form-label">Identificación</label>
                                <input type="text" class="form-control" id="identification" name="identification" required>
                            </div>

                            <div class="mb-3">
                                <label for="name" class="form-label">Nombre</label>
                                <input type="text" class="form-control" id="name" name="name" required>
                            </div>

                            <div class="mb-3">
                                <label for="department" class="form-label">Departamento</label>
                                <input type="text" class="form-control" id="department" name="department" required>
                            </div>

                            <div class="mb-3">
                                <label for="position" class="form-label">Posición</label>
                                <input type="text" class="form-control" id="position" name="position" required>
                            </div>

                            <div class="mb-3">
                                <label for="monthlySalary" class="form-label">Salario Mensual</label>
                                <input type="number" class="form-control" id="monthlySalary" name="monthlySalary" required step="0.01">
                            </div>

                            <div class="mb-3">
                                <label for="status" class="form-label">Estado</label>
                                <select class="form-select" id="status" name="status" required>
                                    <option value="Activo">Activo</option>
                                    <option value="Inactivo">Inactivo</option>
                                </select>
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <button type="button" class="btn btn-primary" onclick="guardarEmpleado()">Guardar Cambios</button>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        $(document).ready(function () {
            cargarEmpleados();
        });

        function cargarEmpleados() {
            $.get('/Empleados/Index', function (data) {
                var tabla = $('#tablaEmpleados tbody');
                tabla.empty();

                data.forEach(function (empleado) {
                    var row = '<tr>' +
                        '<td>' + empleado.employeeID + '</td>' +
                        '<td>' + empleado.identification + '</td>' +
                        '<td>' + empleado.name + '</td>' +
                        '<td>' + empleado.hireDate + '</td>' +
                        '<td>' + empleado.department + '</td>' +
                        '<td>' + empleado.position + '</td>' +
                        '<td>S/. ' + parseFloat(empleado.monthlySalary).toFixed(2) + '</td>' +
                        '<td>' + (empleado.status === "Activo" ? '<span class="badge bg-success">Activo</span>' : '<span class="badge bg-danger">Inactivo</span>') + '</td>' +
                        '<td>' +
                        '<button class="btn btn-sm btn-danger" onclick="eliminarEmpleado(' + empleado.employeeID + ')"><i class="fas fa-trash-alt"></i> Eliminar</button>' +
                        '</td>' +
                        '</tr>';
                    tabla.append(row);
                });
            });
        }

        function abrirModalNuevo() {
            $('#formEmpleado')[0].reset();
            $('#employeeID').val('');
            $('#modalEmpleado').modal('show');
        }

        function guardarEmpleado() {
            var id = $('#employeeID').val();
            var url = id ? '/Empleados/Update/' + id : '/Empleados/Create';
            var tipo = id ? 'PUT' : 'POST';

            var empleado = {
                employeeID: id,
                identification: $('#identification').val(),
                name: $('#name').val(),
                department: $('#department').val(),
                position: $('#position').val(),
                monthlySalary: $('#monthlySalary').val(),
                status: $('#status').val()
            };

            $.ajax({
                url: url,
                type: tipo,
                contentType: 'application/json',
                data: JSON.stringify(empleado),
                success: function () {
                    $('#modalEmpleado').modal('hide');
                    cargarEmpleados();
                }
            });
        }

        function editarEmpleado(id) {
            $.get('/Empleados/GetEmployee/' + id, function (empleado) {
                $('#employeeID').val(empleado.employeeID);
                $('#identification').val(empleado.identification);
                $('#name').val(empleado.name);
                $('#department').val(empleado.department);
                $('#position').val(empleado.position);
                $('#monthlySalary').val(empleado.monthlySalary);
                $('#status').val(empleado.status);
                $('#modalEmpleado').modal('show');
            });
        }

        function eliminarEmpleado(id) {
            if (confirm('¿Estás seguro de eliminar este empleado?')) {
                $.ajax({
                    url: '/Empleados/Delete/' + id,
                    type: 'DELETE',
                    success: function () {
                        cargarEmpleados();
                    }
                });
            }
        }
    </script>

</body>
</html>
